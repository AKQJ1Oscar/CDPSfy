<div class="container">
    <form action="/tracks" method="post" enctype="multipart/form-data">
    <label class="form upload_field">Upload a new track:</label>
        <div class="input-group col-sm-4 col-sm-offset-4" style="margin-bottom: 15px;">
            <span class="input-group-btn">
                <span class="btn btn-primary btn-file" style="margin-right: 3px; width: 100%;">
                    Browse track&hellip; <input type="file" name="track">
                </span>
            </span>
            <input type="text" class="form-control" readonly required>
        </div>
        <div class="input-group col-sm-4 col-sm-offset-4" style="margin-bottom: 15px;">
            <span class="input-group-btn">
                <span class="btn btn-primary btn-file">
                    Browse cover&hellip; <input type="file" name="image">
                </span>
            </span>
            <input type="text" class="form-control" readonly>
        </div>
        <div class="col-sm-4 col-sm-offset-4">
            <button type="submit" class="file-input btn btn-primary btn-file" style="width: 33%; float: left; margin-right: 10px;">Upload</button>
            <span class="help-block" style="margin-top: 8px;">
                Supported track files: MP3, Wav, Ogg
            </span>
            <% if (error != 0) { %>
            <div class="alert alert-danger">
                <strong>Error:</strong> <%= error %>.
            </div>
            <% } %>
        </div>
    </form>
</div>
